generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Poll {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  options PollOption[]
}

model PollOption {
  id     String @id @default(uuid())
  title  String
  pollId String

  poll Poll @relation(fields: [pollId], references: [id])
}
